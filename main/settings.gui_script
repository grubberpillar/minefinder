function on_message(self, message_id, message, sender)
	if message_id == hash("load_game") then
		for i,k in ipairs(self.switches) do
			-- print(self.switches_true[i]..": pre -", self.switch_on[i], "; saved -", l_data.settings[self.switches_true[i]])
			if self.switch_on[i] ~= l_data.settings[self.switches_true[i]] then
				-- print("*")
				self.switch_on[i] = l_data.settings[self.switches_true[i]]
				gui.set_color(gui.get_node(k.."-txt"), self.settings_txt_color[3-bool_to_num(i>6)][1][bool_to_num(self.switch_on[i])])
				if i == 3 or i == 4 then
					gui.set_color(gui.get_node(k.."-img"), self.settings_txt_color[3-bool_to_num(i>6)][1][bool_to_num(self.switch_on[i])])
				end
				if i < 7 or not self.switch_on[i] then
					gui.play_flipbook(gui.get_node(k.."-light"), "small-light-"..bool_to_word(self.switch_on[i]))
				else
					gui.play_flipbook(gui.get_node(k.."-light"), "small-light-"..bool_to_word(self.switch_on[i]).."-purple")
				end
				
				if i == 2 and l_data.graffiti_enabled then
					msg.post("/graffiti#graffiti", "enable")
				elseif i == 3 then
					gui.set(gui.get_node("quit-game-label-save-"..bool_to_word(self.switch_on[i])), "color.w", 1)
					gui.set(gui.get_node("quit-game-label-save-"..bool_to_word(not self.switch_on[i])), "color.w", 0)
				elseif i == 5 then
					local scroll_thresh
					if not l_data.settings.scroll then
						scroll_thresh = 0
						gui.set_color(self.nodes.scroll_ring, vmath.vector4((59/255), (59/255), (59/255), 1))
					else
						scroll_thresh = l_data.settings.scroll_slider
						gui.set_color(self.nodes.scroll_ring, vmath.vector4((128/255), (95/255), (22/255), 1))
					end
					for j = 1,5 do
						if j <= scroll_thresh then
							gui.set_color(gui.get_node("scroll-node-"..(j)), vmath.vector4((223/255), (113/255), (38/255), 1))
							if j > 1 then
								gui.set_color(gui.get_node("scroll-bar-"..(j)), vmath.vector4((238/255), (195/255), (89/255), 1))
							end
						else
							gui.set_color(gui.get_node("scroll-node-"..(j)), vmath.vector4((89/255), (86/255), (82/255), 1))
							if j > 1 then
								gui.set_color(gui.get_node("scroll-bar-"..(j)), vmath.vector4((105/255), (106/255), (106/255), 1))
							end
						end
					end
				elseif i == 6 then
					if self.switch_on[i] then
						self.scroll_mod = ""
					else
						self.scroll_mod = "-alt"
					end
				elseif i == 7 then
					msg.post("/graffiti#graffiti", "set_graffiti", {alpha = 2-bool_to_num(l_data.settings.graffiti)})
				elseif i == 9 then
					msg.post("/gui#lights", "set_gamer_lights", {alpha = 2-bool_to_num(l_data.settings.gamer_lights)})
				end
			end
		end

		set_sfx_slider(self)
		
		for i = 1,3 do
			if l_data.doors_found[i] then
				gui.play_flipbook(gui.get_node("hidden-door-"..i), "bright-check")
			end
		end
		
		if l_data.doors_found[5] then
			gui.set(gui.get_node("key-get"), "color.w", 1)
		end
		
		if l_data.doors_found[1] and l_data.doors_found[2] and l_data.doors_found[3] then
			l_data.doors_found[4] = true
			gui.set(gui.get_node("hidden-door-underline"), "color.w", 1)
		end

		if l_data.os == "web" then
			gui.set_text(gui.get_node("zoom-txt"), "CHANGE GRAPHICS QUALITY ["..quality_txt(l_data.screen_scale).."]")
			gui.set_text(gui.get_node("graphics-setting"), quality_txt_2(l_data.screen_scale))
		end
	elseif message_id == hash("tutorial-off") then
		self.switch_on[1] = false
		gui.set_color(gui.get_node("tutorial-txt"), vmath.vector4((105/255), (106/255), (106/255), 1))
		gui.play_flipbook(gui.get_node("tutorial-light"), "small-light-off")
	elseif message_id == hash("hidden-settings") then
		gui.set(gui.get_node("hidden-settings"), "color.w", 1)
		msg.post("/gui#lights", "outlet")
		if not message.startup then
			gui.play_flipbook(gui.get_node("lights-light"), "small-light-on-purple")
			gui.set_color(gui.get_node("lights-txt"), vmath.vector4((185/255), (142/255), (219/255), 1))
			gui.set(gui.get_node("notif"), "color.w", 1)
			gui.set(gui.get_node("notif-flash"), "color.w", 1)
			self.notif_timer = 0.1
			self.switch_on[9] = true
			l_data.settings.gamer_lights = true
			msg.post("/gui#lights", "set_gamer_lights", {alpha = 2-bool_to_num(self.switch_on[9])})
		end
	elseif message_id == hash("found_door") then
		if message.door < 4 then
			gui.play_flipbook(gui.get_node("hidden-door-"..message.door), "bright-check")
		elseif message.door == 5 then
			gui.set(gui.get_node("key-get"), "color.w", 1)
		end
		if l_data.doors_found[1] and l_data.doors_found[2] and l_data.doors_found[3] then
			l_data.doors_found[4] = true
			gui.set(gui.get_node("hidden-door-underline"), "color.w", 1)
		end
	elseif message_id == hash("world-flash") then
		gui.play_flipbook(gui.get_node("hs-top"), "world-blink")
		self.world_blinking = true
	elseif message_id == hash("world-notif") then
		gui.set(gui.get_node("notif-hs"), "color.w", 1)
		gui.set(gui.get_node("notif-flash-hs"), "color.w", 1)
		self.notif_timer_hs = 0.1
	elseif message_id == hash("update_scale") then
		gui.set_text(gui.get_node("zoom-txt"), "CHANGE GRAPHICS QUALITY ["..quality_txt(l_data.screen_scale).."]")
		gui.set_text(gui.get_node("graphics-setting"), quality_txt_2(l_data.screen_scale))
	end
end

function update(self, dt)
	if self.e_timer then
		if self.e_timer <= 0 then
			local rand = math.random(0, 7)
			gui.play_flipbook(gui.get_node("broken-e"), "broken-e-"..rand)
			self.e_timer = 4
		else
			self.e_timer = self.e_timer - dt
		end
	end

	if self.quit_timer then
		if self.quit_timer <= 0 then
			sys.exit(0)
		else
			self.quit_timer = self.quit_timer - dt
		end
	end
	
	if self.notif_timer then
		if self.notif_timer <= 0 then
			gui.set(gui.get_node("notif-flash"), "color.w", 0)
			self.notif_timer = nil
		else
			self.notif_timer = self.notif_timer - dt
		end
	end	

	if self.notif_timer_hs then
		if self.notif_timer_hs <= 0 then
			gui.set(gui.get_node("notif-flash-hs"), "color.w", 0)
			self.notif_timer_hs = nil
		else
			self.notif_timer_hs = self.notif_timer_hs - dt
		end
	end	
end

function on_input(self, action_id, action)
	if not (self.viewing_credits or self.viewing_more_controls or self.viewing_info) and gui.pick_node(self.nodes.settings_hit, action.x, action.y) then --settings toggle
		if action.pressed and action_id == hash("touch") then --click
			msg.post("/sfx#sfx", "key-snap")
			gui.set(self.nodes.settings_top, "position.y", 0)
		elseif action.released and action_id == hash("touch") and gui.get(self.nodes.settings_top, "position.y") == 0 then --release
			msg.post("/sfx#sfx", "key-click")
			if gui.get(gui.get_node("notif"), "color.w") == 1 then
				gui.set(gui.get_node("notif-flash"), "color.w", 0)
				gui.set(gui.get_node("notif"), "color.w", 0)
			end

			if not self.viewing_setttings then
				gui.set(self.nodes.settings_nodes, "color.w", 1)
				if not l_data.viewing_hs then
					gui.set_render_order(9)
					msg.post("/zoom#minefinder", "release_input_focus")
					msg.post("/gui#minefinder", "release_input_focus")
					msg.post("/gui-zoom#zoom", "release_input_focus")
					msg.post("/anims#anims", "release_input_focus")
				end
				gui.play_flipbook(gui.get_node("broken-e"), "broken-e-0")
				self.e_timer = 2
			else
				gui.set(self.nodes.settings_nodes, "color.w", 0)
				if not l_data.viewing_hs then
					gui.set_render_order(3)
					msg.post("/zoom#minefinder", "acquire_input_focus")
					msg.post("/gui#minefinder", "acquire_input_focus")
					msg.post("/gui-zoom#zoom", "acquire_input_focus")
					msg.post("/anims#anims", "acquire_input_focus")
				end
				self.e_timer = nil
			end
			self.viewing_setttings = not self.viewing_setttings
			gui.set(self.nodes.settings_top, "position.y", 1)
		elseif gui.get(self.nodes.settings_bot, "color") ~= vmath.vector4((234/255), (172/255), (75/255), 1) then --hover
			gui.set_color(self.nodes.settings_bot, vmath.vector4((234/255), (172/255), (75/255), 1))
		end
	elseif gui.get(self.nodes.settings_bot, "color") ~= vmath.vector4((223/255), (113/255), (38/255), 1) then -- reset
		gui.set_color(self.nodes.settings_bot, vmath.vector4((223/255), (113/255), (38/255), 1))
		gui.set(self.nodes.settings_top, "position.y", 1)
	end

	if not (self.viewing_setttings or self.viewing_credits or self.viewing_more_controls or self.viewing_info) and gui.pick_node(self.nodes.hs_hit, action.x, action.y) then --leaderboard toggle --world
		if action.pressed and action_id == hash("touch") then --click
			msg.post("/sfx#sfx", "button1-depress")
			gui.set(self.nodes.hs_top, "position.y", 0)
		elseif action.released and action_id == hash("touch") and gui.get(self.nodes.hs_top, "position.y") == 0 then --release
			msg.post("/sfx#sfx", "switch")
			l_data.viewing_hs = not l_data.viewing_hs
			if l_data.viewing_hs then
				gui.set_render_order(9)
				msg.post("/leaderboard#leaderboard", "enable")
				msg.post("/zoom#minefinder", "release_input_focus")
				msg.post("/gui#minefinder", "release_input_focus")
				msg.post("/gui-zoom#zoom", "release_input_focus")
				msg.post("/anims#anims", "release_input_focus")
			else
				gui.set_render_order(3)
				msg.post("/leaderboard#leaderboard", "disable")
				msg.post("/zoom#minefinder", "acquire_input_focus")
				msg.post("/gui#minefinder", "acquire_input_focus")
				msg.post("/gui-zoom#zoom", "acquire_input_focus")
				msg.post("/anims#anims", "acquire_input_focus")
			end
			gui.set(self.nodes.hs_top, "position.y", 1)

			if self.world_blinking then
				gui.play_flipbook(gui.get_node("hs-top"), "world")
				self.world_blinking = false
				gui.set(gui.get_node("notif-hs"), "color.w", 0)
			end
		elseif gui.get(self.nodes.hs_bot, "color") ~= vmath.vector4((99/255), (155/255), (255/255), 1) then --hover
			gui.set_color(self.nodes.hs_bot, vmath.vector4((99/255), (155/255), (255/255), 1))
		end
	elseif gui.get(self.nodes.hs_bot, "color") ~= vmath.vector4((63/255), (63/255), (116/255), 1) then -- reset
		gui.set_color(self.nodes.hs_bot, vmath.vector4((63/255), (63/255), (116/255), 1))
		gui.set(self.nodes.hs_top, "position.y", 1)
	end

	if action.pressed and self.viewing_setttings and action_id == hash("touch") and not (self.viewing_credits or self.viewing_more_controls or self.viewing_info) and not gui.pick_node(gui.get_node("settings"), action.x, action.y) and not gui.pick_node(self.nodes.settings_hit, action.x, action.y) and not gui.pick_node(gui.get_node("quit-hitbox"), action.x, action.y) and not (self.controls_visible and gui.pick_node(gui.get_node("control-scroll-hit"), action.x, action.y)) and not (l_data.more_settings and gui.pick_node(gui.get_node("hidden-settings"), action.x, action.y)) then
		gui.set(self.nodes.settings_nodes, "color.w", 0)
		msg.post("/sfx#sfx", "button1-release")
		if not l_data.viewing_hs then
			gui.set_render_order(3)
			msg.post("/zoom#minefinder", "acquire_input_focus")
			msg.post("/gui#minefinder", "acquire_input_focus")
			msg.post("/gui-zoom#zoom", "acquire_input_focus")
			msg.post("/anims#anims", "acquire_input_focus")
		end
		self.viewing_setttings = false
		self.e_timer = nil
	end

	if not self.web_game and gui.pick_node(gui.get_node("quit-hitbox"), action.x, action.y) and not self.quit_timer and not l_data.save_quit then --quit game
		if action.pressed and action_id == hash("touch") then
			gui.play_flipbook(gui.get_node("mini-floppy"), "mini-floppy-lit")
			gui.set_color(gui.get_node("quit-game-label-txt-save-"..bool_to_word(l_data.settings.autosave)), vmath.vector4((34/255), (32/255), (52/255), 1))
			gui.set_size(gui.get_node("quit-underline"), vmath.vector3(0,0,0))
			gui.play_flipbook(gui.get_node("quit-x"), "red-x-lit")
			
			if l_data.settings.autosave then
				l_data.save_quit = true
				msg.post("/zoom#minefinder", "save_game_msg")
			elseif l_data.saved == nil then
				l_data.save_quit = true
			else
				self.quit_timer = 0.05
			end
		elseif gui.get(gui.get_node("quit-underline"), "color.w") == 0 then
			gui.set(gui.get_node("quit-underline"), "color.w", 1)
			if l_data.reset_warning then
				msg.post("/gui#door", "warning_toggle")
			end
		end
	elseif gui.get(gui.get_node("quit-underline"), "color.w") ~= 0 and not self.quit_timer then
		gui.set(gui.get_node("quit-underline"), "color.w", 0)
		if l_data.reset_warning then
			msg.post("/gui#door", "warning_toggle")
		end
	end

	if self.web_game and gui.pick_node(gui.get_node("info-hitbox"), action.x, action.y) then --info button
		if action.pressed and action_id == hash("touch") then
			gui.play_flipbook(gui.get_node("info-but"), "info-button-lit")
			gui.set_color(gui.get_node("info-label-txt"), vmath.vector4((99/255), (155/255), 1, 1))
			gui.set_size(gui.get_node("info-underline"), vmath.vector3(0,0,0))
		elseif action.released and action_id == hash("touch") then
			gui.play_flipbook(gui.get_node("info-but"), "info-button")
			gui.set(gui.get_node("info-underline"), "color.w", 1)
			gui.set_size(gui.get_node("info-underline"), vmath.vector3(6,1,0))
			gui.set_color(gui.get_node("info-label-txt"), vmath.vector4(1, 1, 1, 1))
			self.viewing_info = not self.viewing_info
			if self.viewing_info then
				gui.set(gui.get_node("info-nodes"), "color.w", 1)
			else
				gui.set(gui.get_node("info-nodes"), "color.w", 0)
			end
