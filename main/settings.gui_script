					gui.set(gui.get_node("control-scroll"), "color.w", 1)
					if l_data.gui_anims then
						gui.play_flipbook(gui.get_node("control-scroll"), "scroll-open"..self.scroll_mod, show_more_controls)
					else
						gui.play_flipbook(gui.get_node("control-scroll"), "control-scroll-07"..self.scroll_mod)
						show_more_controls(self)
					end
					self.controls_visible = true
				else
					self.controls_button = false
					self.controls_visible = false
					gui.set(gui.get_node("more-controls"), "color.w", 0)
					if l_data.gui_anims then
						gui.play_flipbook(gui.get_node("control-scroll"), "scroll-close"..self.scroll_mod, hide_flipbook)
					else
						gui.play_flipbook(gui.get_node("control-scroll"), "control-scroll-00")
						hide_flipbook(self)
					end
				end
			elseif gui.get_color(gui.get_node("gate-top")) ~= vmath.vector4((136/255), (135/255), (134/255), 1) and gui.get(gui.get_node("gate-top"), "color.x") ~= 1 then
				set_gate_color(vmath.vector4((136/255), (135/255), (134/255), 1))
			end
		elseif gui.get_color(gui.get_node("gate-top")) ~= vmath.vector4((89/255), (86/255), (82/255), 1) then
			set_gate_color(vmath.vector4((89/255), (86/255), (82/255), 1))
		end

		if self.controls_button and gui.pick_node(gui.get_node("more-controls-hit"), action.x, action.y) then --more controls button
			if action.pressed and action_id == hash("touch") then --click
				msg.post("/sfx#sfx", "button2-depress")
				gui.play_flipbook(self.nodes.controls_top, "more-controls-bright")
				gui.set(self.nodes.controls_top, "position.y", 0)
			elseif action.released and action_id == hash("touch") and gui.get(self.nodes.controls_top, "position.y") == 0 then --release
				msg.post("/sfx#sfx", "button2-release")
				self.viewing_more_controls = true
				gui.set(gui.get_node("more-controls-nodes"), "color.w", 1)
				gui.play_flipbook(self.nodes.controls_top, "more-controls-lit")
				gui.set(self.nodes.controls_top, "position.y", 1)
			elseif not self.controls_button_hover then --hover
				self.controls_button_hover = true
				gui.set_color(gui.get_node("more-controls"), vmath.vector4((91/255), (110/255), (225/255), 1))
				gui.play_flipbook(self.nodes.controls_top, "more-controls-lit")
			end
		elseif self.controls_button_hover then -- reset
			self.controls_button_hover = false
			gui.set_color(gui.get_node("more-controls"), vmath.vector4((63/255), (63/255), (116/255), 1))
			gui.play_flipbook(self.nodes.controls_top, "more-controls")
			gui.set(self.nodes.controls_top, "position.y", 1)
		end
		
	end

	if self.viewing_credits and gui.pick_node(self.nodes.credits_door_hit, action.x, action.y) then -- exit credits
		if action.pressed and action_id == hash("touch") then 
			self.viewing_credits = false
			gui.set(gui.get_node("credits-nodes"), "color.w", 0)
			if not l_data.doors_found[2] then
				l_data.doors_found[2] = true
				msg.post(".", "found_door", {door = 2})
			end
		elseif not self.credits_door_hover then
			gui.play_flipbook(self.nodes.credits_door, "credits-door-open")
			self.credits_door_hover = true
		end
	elseif self.credits_door_hover then 
		self.credits_door_hover = false
		gui.play_flipbook(self.nodes.credits_door, "credits-door-closed")
	end

	if self.viewing_more_controls and gui.pick_node(self.nodes.control_door_hit, action.x, action.y) then -- exit more controls
		if action.pressed and action_id == hash("touch") then 
			self.viewing_more_controls = false
			gui.set(gui.get_node("more-controls-nodes"), "color.w", 0)
			if not l_data.doors_found[1] then
				l_data.doors_found[1] = true
				msg.post(".", "found_door", {door = 1})
			end
		elseif not self.credits_door_hover then
			gui.play_flipbook(self.nodes.control_door, "credits-door-open")
			self.control_door_hover = true
		end
	elseif self.control_door_hover then 
		self.control_door_hover = false
		gui.play_flipbook(self.nodes.control_door, "credits-door-closed")
	end

	if self.viewing_setttings then
		if action.pressed and action_id == hash("minus") then
			msg.post("/zoom#minefinder", "scale_down")
			print("1")
		end

		if action.pressed and action_id == hash("plus") then
			msg.post("/zoom#minefinder", "scale_up")
		end
		
		if action.pressed and action_id == hash("debug") then
			msg.post("/zoom#minefinder", "debug")
		end


		if action_id == hash("debug2") and action.pressed then
			msg.post("/zoom#minefinder", "debug2")
		end

		if action.pressed and action_id == hash("debug3") then
			l_data.debug_shift = not l_data.debug_shift
			print("debug shift", l_data.debug_shift)
		end
	end
	

	-- if action.pressed and action_id == hash("debug") then
		--debug
	-- end
end